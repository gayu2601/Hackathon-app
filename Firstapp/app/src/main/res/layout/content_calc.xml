<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.firstapp.CalcActivity"
    tools:showIn="@layout/activity_calc"
    android:id="@+id/calccontent"
    android:orientation="vertical"
    >
    <TableRow android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="100dp">
        <TextView android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="                       " />
        <TextView android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="RECIEVED AMOUNT: " />
        <TextView android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="EXEMPTED AMOUNT: "/>
        <TextView android:layout_width="45dp"
            android:layout_height="50dp"
            android:text="TAXABLE AMOUNT: "/>
    </TableRow>

    <TableRow android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="57dp">
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:text="BASIC PAY:"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text1"
           />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text5"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text9"
            />
    </TableRow>

    <TableRow android:orientation="horizontal"
        android:layout_width="83dp"
        android:layout_height="100dp">
        <TextView android:layout_width="100dp"
            android:layout_height="59dp"
            android:text="HOUSE RENT ALLOWANCE: "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text2"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text6"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text10"
            />

    </TableRow>

    <TableRow android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <TextView android:layout_width="83dp"
            android:layout_height="100dp"
            android:text="TRANSPORT ALLOWANCE: "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text3"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text7"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text11"
            />

    </TableRow>

    <TableRow android:orientation="horizontal"
        android:layout_width="76dp"
        android:layout_height="100dp">
        <TextView android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="OTHER ALLOWANCES: "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text4"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text8"
            />
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text12"
            />

    </TableRow>
    <TableRow android:orientation="horizontal"
        android:layout_width="76dp"
        android:layout_height="100dp">
        <TextView android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="TOTALINCOME FROM SALARY: "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text20"
            />

    </TableRow>


    <Button
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="@string/button_calc"
        android:onClick="Calculate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEDUCTIONS:"/>
    <TableRow android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <TextView android:layout_width="83dp"
            android:layout_height="100dp"
            android:text="SECTION 80C(MAX. 1.5 LAKHS): "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text13"
            />
    </TableRow>
    <TableRow android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <TextView android:layout_width="83dp"
            android:layout_height="100dp"
            android:text="SECTION 80D(MAX. 25000): "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text14"
            />
    </TableRow>
    <TableRow android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <TextView android:layout_width="83dp"
            android:layout_height="100dp"
            android:text="SECTION 80G(FOR PM/CM FUND-100%,FOR OTHER CHARITIES-50%): "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text15"
            />
    </TableRow>
    <TableRow android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <TextView android:layout_width="83dp"
            android:layout_height="100dp"
            android:text="TOTAL DEDUCTIONS under chapter 6A: "/>
        <TextView android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/text16"
            />
    </TableRow>
    <TableRow>
    <TextView android:layout_width="83dp"
        android:layout_height="100dp"
        android:text="TOTAL TAX: "/>
    <TextView android:layout_width="83dp"
        android:layout_height="100dp"
        android:id="@+id/text17"/>
    </TableRow>
    <TableRow>
        <TextView android:layout_width="83dp"
            android:layout_height="100dp"
            android:text="EDUCATION CESS AND HIGHER EDUCATION CESS: "/>
        <TextView android:layout_width="83dp"
            android:layout_height="100dp"
            android:id="@+id/text18"/>
    </TableRow>
</TableLayout>
    </ScrollView>